<resources>
    <style name="Widget.Theme.WeClean.TextInput" parent="">
        <item name="android:background">@drawable/text_input_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="Widget.Theme.WeClean.Spinner" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="Widget.Theme.WeClean.ScreenTitle" parent="">
        <item type="id" name="screenTitle"/>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/screen_title_background</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>