<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_200"
    tools:context=".Add">

    <com.example.weclean.ScreenTitle
        style="@style/Widget.Theme.WeClean.ScreenTitle"
        android:id="@+id/screen_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:screenTitle="@string/title_add" />

    <Spinner
        android:id="@+id/select_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/screen_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/text_input_background"
        android:popupBackground="@drawable/spinner_background"
        tools:listitem="@layout/spinner_item"
        />

    <com.example.weclean.TextInput
        style="@style/Widget.Theme.WeClean.TextInput"
        android:id="@+id/select_tags"
        app:layout_constraintTop_toBottomOf="@+id/select_community"
        app:layout_constraintLeft_toLeftOf="parent"
        app:hintString="Tag" />

    <com.example.weclean.TextInput
        style="@style/Widget.Theme.WeClean.TextInput"
        android:id="@+id/select_location"
        app:layout_constraintTop_toBottomOf="@+id/select_tags"
        app:layout_constraintLeft_toLeftOf="parent"
        app:hintString="Location" />

    <include layout="@layout/navbar" />
</androidx.constraintlayout.widget.ConstraintLayout>