<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_200"
    tools:context=".Add">

    <include layout="@layout/screen_label" />

    <LinearLayout
        android:id="@+id/eighty_percent_layout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <com.example.weclean.TextInput
            android:id="@+id/select_community"
            android:layout_width="wrap_content"
            android:layout_weight="0.8"
            android:layout_height="0dp"
            style="@style/Widget.Theme.WeClean.TextInput"
            app:hintString="Tag" />

        <com.example.weclean.TextInput
            android:id="@+id/select_location"
            style="@style/Widget.Theme.WeClean.TextInput"
            app:hintString="Location" />
    </LinearLayout>

    <include layout="@layout/navbar" />
</androidx.constraintlayout.widget.ConstraintLayout>