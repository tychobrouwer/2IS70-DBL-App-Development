<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            style="@style/Widget.Theme.WeClean.SectionLabel"
            android:id="@+id/email_label"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/label_email" />

        <TextView
            style="@style/Widget.Theme.WeClean.TextInput"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email_label"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Current Email" />

        <TextView
            style="@style/Widget.Theme.WeClean.SectionLabel"
            android:id="@+id/birthdate_label"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/label_brith_date" />

        <TextView
            style="@style/Widget.Theme.WeClean.TextInput"
            android:id="@+id/birthdate"
            app:layout_constraintTop_toBottomOf="@+id/birthdate_label"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Current Date of Birth" />

        <TextView
            style="@style/Widget.Theme.WeClean.SectionLabel"
            android:id="@+id/region_label"
            app:layout_constraintTop_toBottomOf="@+id/birthdate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/label_country_region" />

        <TextView
            style="@style/Widget.Theme.WeClean.TextInput"
            android:id="@+id/region"
            app:layout_constraintTop_toBottomOf="@+id/region_label"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Eindhoven, Netherlands" />
    </LinearLayout>
</FrameLayout>